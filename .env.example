# WABE Environment Configuration
# Copy this file to .env and fill in your API keys

# Google AI Configuration
# Set to FALSE to use standard Google AI API (recommended for development)
# Set to TRUE to use Google Cloud Vertex AI (requires GCP project setup)
GOOGLE_GENAI_USE_VERTEXAI=FALSE

# Google API Key
# Required for white agent (Gemini 2.0 Flash model)
# Get your API key at: https://aistudio.google.com/app/apikey
# Free tier: 15 requests/minute, 1500 requests/day
GOOGLE_API_KEY=your_google_api_key_here

# Optional: Logging Configuration
# LOG_LEVEL=INFO
# LOG_DIR=.logs

# Optional: Output Configuration
# OUTPUT_DIR=.output
